<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DangKyXeChoThueActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ĐĂNG KÝ XE CHO THUÊ"
                    android:gravity="center"
                    android:padding="20dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/adamina"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DDDDDD">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin xe "
                    android:textSize="14dp"
                    android:fontFamily="@font/bungee"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình ảnh (*):"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:textColor="@color/red"
                android:fontFamily="@font/adamina"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <ImageView
                    android:id="@+id/imgThem"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/chooseimage" />
                <ImageView
                    android:id="@+id/imgHinhAnhXe_Them"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnupload_them"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:textAllCaps="false"
                android:backgroundTint="@color/red"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên xe (*):"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:fontFamily="@font/adamina"/>
                <EditText
                    android:id="@+id/edtTenXe_Them"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:inputType="textPersonName"
                    android:hint="Honda City 2014"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hãng xe (*):"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:fontFamily="@font/adamina"/>

                <Spinner
                    android:id="@+id/spinnerHangXe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại xe (*):"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:fontFamily="@font/adamina"/>

                <Spinner
                    android:id="@+id/spinnerLoaiXe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá thuê (*):"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:fontFamily="@font/adamina"/>
                <EditText
                    android:id="@+id/edtGia_Them"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="number"
                    android:hint="500000/ngày"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vị trí (*):"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:fontFamily="@font/adamina"/>
                <EditText
                    android:id="@+id/edtDiaChi_Them"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="35dp"
                    android:inputType="textMultiLine"
                    android:hint="13/208 Lã Xuân Oai, Tăng Nhơn Phú A..."/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả (*):"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:fontFamily="@font/adamina"/>
                <EditText
                    android:id="@+id/edtMoTa_Them"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="30dp"
                    android:inputType="textPersonName"
                    android:hint="mới, chạy tốt..."/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T.tin khác:"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/adamina"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:inputType="textPersonName"
                    android:hint="thêm một số thông tịn khác..."/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkDongY_ThemXe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Tôi đã đọc và đồng ý với " />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtChinhSach_ChuXe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chính sách của NAT"
                    android:textStyle="italic"
                    android:textColor="#0000FF"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnDangKyXe_Them"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng ký xe"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#008000"/>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>